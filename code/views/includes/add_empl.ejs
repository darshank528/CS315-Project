<%- include('base.ejs') %>
 <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script> 
<link rel="stylesheet" href="/css/home.css">
 <link rel="stylesheet" href="/css/forms.css">
 <link rel="stylesheet" href="/css/product.css">
</head>

<body>

<main>
    <div style="width:800px; margin:0 auto; padding: 100px;">
    <form class="product-form" action="/empl" method="POST">
        
        <div class="form-group row">
            
            <label for="id" class="col-sm-2 col-form-label">ID (Don't change)</label>
            <div class="col-sm-10">
            <input type="number" disabled="disabled" name="id" id="id" value="<%= idd[0].id %>">
            </div>
        
        </div>
        
        <div class="form-group row">
            <label for="name" class="col-sm-2 col-form-label">Name</label>
            <div class="col-sm-10">
            <input type="text" name="name" id="name" value="<% if (editing) { %><%= product.name %><% } %>">
            </div>
        </div>
        
        <div class="form-group row">
            <label for="gender" class="col-sm-3 col-form-label">Gender</label>
            <div class="col-sm-9">
            <input type="text" name="gender" id="gender" value="<% if (editing) { %><%= product.gender %><% } %>">
            </div>
        </div>
      
        <div class="form-group row">
            <label for="age" class="col-sm-2 col-form-label">Age</label>
            <div class="col-sm-10">
            <input type="number" name="age" id="age" value="<% if (editing) { %><%= product.age %><% } %>">
            </div>
        </div>
        
        <div class="form-group row">
            <label for="salary" class="col-sm-3 col-form-label">Salary</label>
            <div class="col-sm-9">
            <input type="text" name="salary" id="salary" value="<% if (editing) { %><%= product.salary %><% } %>">
            </div>
        </div>
       
        <div class="form-group row">
            <label for="role" class="col-sm-2 col-form-label">Role</label>
            <div class="col-sm-10">
            <input type="text" name="role" id="role" value="<% if (editing) { %><%= product.role %><% } %>">
        </div>
        </div>
      
        <div class="form-group row">
            <label for="occ" class="col-sm-4 col-form-label">Occupied?</label>
            <div class="col-sm-8">
            <input type="number" name="occ" id="occ" value="<% if (editing) { %><%= product.occ %><% } %>">
            </div>
        </div>

        <input type="hidden" value="<%= idd[0].id %>" name="id">
        <% if (editing) { %>
        <input type="hidden" value="<%= product.name %>" name="name">
        <input type="hidden" value="<%= product.gender %>" name="gender">
        <input type="hidden" value="<%= product.age %>" name="age">
        <input type="hidden" value="<%= product.salary %>" name="salary">
        <input type="hidden" value="<%= product.role %>" name="role">
        <input type="hidden" value="<%= product.exp %>" name="exp">
        <input type="hidden" value="<%= product.occ %>" name="occ">
        <% } %>

        <br>
        <br>

        <button class="btn" type="submit">Add</button>
        
    </form>
    </div>

</main>
</body>
