<%- include('base.ejs') %>
 <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script> 
<link rel="stylesheet" href="/css/home.css">
 <link rel="stylesheet" href="/css/forms.css">
 <link rel="stylesheet" href="/css/product.css">
</head>

<body>

<main>
    <div style="width:800px; margin:0 auto; padding: 100px;">
    <form class="product-form" action="/up_empl" method="POST">
        
        <div class="form-group row">
            <label for="id" class="col-sm-2 col-form-label">ID (Don't change)</label>
            <div class="col-sm-10">
            <input type="number" disabled="disabled" name="id" id="id" value="<%= info[0].id %>">
            </div>
        </div>

        <div class="form-group row">
            <label for="name" class="col-sm-2 col-form-label">Name</label>
            <div class="col-sm-10">
            <input type="text" name="name" id="name" value="<% if (editing) { %><%= product.name %><% } else { %><%= info[0].name_fn %><% } %>">
            </div>
        </div>

        <div class="form-group row">
            <label for="gender" class="col-sm-3 col-form-label">Gender</label>
            <div class="col-sm-9">
            <input type="text" name="gender" id="gender" value="<% if (editing) { %><%= product.gender %><% } else { %><%= info[0].gender %><% } %>">
            </div>
        </div>

        <div class="form-group row">
            <label for="age" class="col-sm-2 col-form-label">Age</label>
            <div class="col-sm-10">
            <input type="number" name="age" id="age" value="<% if (editing) { %><%= product.age %><% } else { %><%= info[0].age %><% } %>">
            </div>
        </div>

        <div class="form-group row">
            <label for="salary" class="col-sm-3 col-form-label">Salary</label>
            <div class="col-sm-9">
            <input type="text" name="salary" id="salary" value="<% if (editing) { %><%= product.salary %><% } else { %><%= info[0].salary %><% } %>">
            </div>
        </div>
        
        <div class="form-group row">
            <label for="role" class="col-sm-2 col-form-label">Role</label>
            <div class="col-sm-10">
            <input type="text" name="role" id="role" value="<% if (editing) { %><%= product.role %><% } else { %><%= info[0].role %><% } %>">
            </div>
        </div>

        <div class="form-group row">
            <label for="occ" class="col-sm-4 col-form-label">Occupied?</label>
            <div class="col-sm-8">
            <input type="number" name="occ" id="occ" value="<% if (editing) { %><%= product.occ %><%} else { %><%= info[0].occupied %><% } %>">
            </div>
        </div>

        <input type="hidden" value="<%= info[0].id %>" name="id">
        <% if (editing) { %>
        <input type="hidden" value="<%= product.name %>" name="name">
        <input type="hidden" value="<%= product.gender %>" name="gender">
        <input type="hidden" value="<%= product.age %>" name="age">
        <input type="hidden" value="<%= product.salary %>" name="salary">
        <input type="hidden" value="<%= product.role %>" name="role">
        <input type="hidden" value="<%= product.exp %>" name="exp">
        <input type="hidden" value="<%= product.occ %>" name="occ">
        <%} else { %>

            <input type="hidden" value="<%= info[0].name %>" name="name">
            <input type="hidden" value="<%= info[0].gender %>" name="gender">
            <input type="hidden" value="<%= info[0].age %>" name="age">
            <input type="hidden" value="<%= info[0].salary %>" name="salary">
            <input type="hidden" value="<%= info[0].role %>" name="role">
            <input type="hidden" value="<%= info[0].exp %>" name="exp">
            <input type="hidden" value="<%= info[0].occ %>" name="occ">
        <% } %>

        <button class="btn" type="submit">Update</button>
        
    </form>
    </div>

</main>
</body>
