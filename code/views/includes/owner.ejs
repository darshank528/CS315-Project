    <table class="w3-table w3-striped w3-bordered">
        <thead>
          <tr style="background-color:coral;">
            <th scope="col">ID</th>
            <th scope="col">Name</th>
            <th scope="col">Quantity</th>
            <th scope="col">Increment</th>
