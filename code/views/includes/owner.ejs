                  <input type="hidden" name="dish_id" value="<%= order_left.dish_id %>">
                    <button class="btn" type="submit">Allot Order</button> 
                   
                </form>
            </td>

            </tr>


        <% } %>
        </table>
  </div>

  <div class="grid">
    <a id= "allot_order_serve">
